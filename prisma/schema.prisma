generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Event {
  id      String @id @unique @default(uuid())
  title   String
  details String?
  slug    String @unique
  maximumAttendees Int? @map("maximum_attendees")

  @@map("events")
}
